<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2196F3" />
            <gradient android:angle="-90" android:startColor="#2196F3" android:endColor="#03A9F4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#496780" />
            <solid android:color="#3C6D93"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#11568E" />
            <gradient android:angle="-90" android:startColor="#2E83C6" android:endColor="#6F8A9F" />
        </shape>
    </item>
</selector>