<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/lin_deviceid"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_margin="5dp"
               android:src="@drawable/cpu"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
           <TextView
               android:id="@+id/txt_deviceId"
               android:layout_marginLeft="5dp"
               android:textSize="15dp"
               android:layout_gravity="center_vertical"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
       <LinearLayout
           android:layout_below="@+id/lin_deviceid"
           android:id="@+id/linear_city"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_margin="5dp"
               android:src="@drawable/map"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
           <TextView
               android:id="@+id/txt_city"
               android:layout_marginLeft="5dp"
               android:textSize="15dp"
               android:text="Gurugaon"
               android:layout_gravity="center_vertical"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
       <LinearLayout
           android:weightSum="2"
           android:id="@+id/rl_issue_site"
           android:layout_below="@+id/linear_city"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_weight="1"
               android:id="@+id/linear_issueto"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_margin="5dp"
                   android:src="@drawable/user1"
                   android:layout_width="30dp"
                   android:layout_height="30dp"/>
               <TextView
                   android:id="@+id/txt_issueto"
                   android:layout_marginStart="5dp"
                   android:textSize="15sp"
                   android:text="gdhgfdjgf"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_weight="1"
               android:id="@+id/linear_site"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_margin="5dp"
                   android:src="@drawable/site"
                   android:layout_width="30dp"
                   android:layout_height="30dp"/>
               <TextView
                   android:id="@+id/txt_sites"
                   android:layout_marginStart="5dp"
                   android:textSize="15sp"
                   android:text="GUR2234"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </LinearLayout>



       <LinearLayout
           android:layout_below="@+id/rl_issue_site"
           android:weightSum="2"
           android:id="@+id/lin_loc_height"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       <LinearLayout
           android:layout_weight="1"
           android:id="@+id/linear_location"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_margin="5dp"
               android:src="@drawable/device"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
           <TextView
               android:id="@+id/txt_location"
               android:layout_marginStart="5dp"
               android:textSize="15sp"
               android:text="Offsite"
               android:layout_gravity="center_vertical"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>

           <LinearLayout
               android:layout_weight="1"
               android:id="@+id/linear_height"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_margin="5dp"
                   android:src="@drawable/antenna"
                   android:layout_width="30dp"
                   android:layout_height="30dp"/>
               <TextView
                   android:id="@+id/txt_height"
                   android:layout_marginLeft="5dp"
                   android:textSize="15dp"
                   android:text="5566.00 m (1.93 ft)"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/lin_more"
           android:layout_below="@+id/lin_loc_height"
           android:background="@color/grey"
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_margin="5dp"
               android:id="@+id/img_clamp"
               android:src="@drawable/clamp"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
           <TextView
               android:layout_marginLeft="5dp"
               android:textSize="15dp"
               android:text="@string/connected"
               android:layout_gravity="center_vertical"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

       <RelativeLayout
           android:padding="5dp"
           android:layout_gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:background="@color/design_default_color_secondary"
               android:layout_alignParentEnd="true"
               android:paddingLeft="8dp"
               android:paddingRight="8dp"
               android:paddingBottom="3dp"
               android:textSize="15dp"
               android:text="@string/more"
               android:layout_gravity="end"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>

       </LinearLayout>
   </RelativeLayout>
</androidx.cardview.widget.CardView>